<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.0"
	xmlns="http://java.sun.com/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd">
	<persistence-unit name="entidadesEvaluacionLLamada">

		<jta-data-source>java:/mod-eva</jta-data-source>
		
		<class>com.evaluacion.entidades.Estudiante</class>
		<class>com.evaluacion.entidades.EstudianteEvaRespuesta</class>
		<class>com.evaluacion.entidades.EvaPreguntasRespuesta</class>
		<class>com.evaluacion.entidades.Evaluacion</class>
		<class>com.evaluacion.entidades.OpcionesRespuesta</class>
		<class>com.evaluacion.entidades.PreguntaOpcionRespuesta</class>
		<class>com.evaluacion.entidades.Pregunta</class>
		<properties>
			<property name="hibernate.dialect" value="org.hibernate.dialect.PostgreSQLDialect" />
			<property name="hibernate.show_sql" value="false" />
			<property name="hibernate.format_sql" value="false" />
		</properties>
	</persistence-unit>
</persistence>
