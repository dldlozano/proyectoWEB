<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.0"
	xmlns="http://java.sun.com/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd">
	<persistence-unit name="cmd">
		<jta-data-source>java:/moodleDS</jta-data-source>
		<class>com.epn.moodle.entidades.Actividad</class>
		<class>com.epn.moodle.entidades.Asignatura</class>
		<class>com.epn.moodle.entidades.Periodo</class>
		<class>com.epn.moodle.entidades.Persona</class>
		<properties>
			<property name="hibernate.dialect" value="org.hibernate.dialect.PostgreSQLDialect" />
			<property name="hibernate.show_sql" value="false" />
			<property name="hibernate.format_sql" value="false" />
		</properties>
	</persistence-unit>
</persistence>
